subinclude("///pleasegomod//:build_defs")

fileexport(
    name = "terminal",
    srcs = [
        "ssh/terminal/terminal.go",
        "ssh/terminal/util.go",
    ] + select({
        "//third_party/go/__config:darwin_amd64": ["ssh/terminal/util_bsd.go"],
        "//third_party/go/__config:linux_amd64": ["ssh/terminal/util_linux.go"],
        "default": [],
    }),
    tag = "go_source",
    deps = ["//third_party/go/golang.org/x/crypto:_crypto#download"],
)

go_library(
    name = "terminal",
    srcs = [":_terminal#go_source"],
    cover = False,
    import_path = "golang.org/x/crypto/ssh/terminal",
    visibility = ["PUBLIC"],
    deps = ["//third_party/go/golang.org/x/sys/unix"],
)
